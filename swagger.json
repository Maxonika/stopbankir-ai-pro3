  "paths": {
    "/search_practice": {
      "post": {
        "summary": "Поиск судебной практики",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "region": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Список найденных дел",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "case_number": { "type": "string" },
                      "court": { "type": "string" },
                      "link": { "type": "string" },
                      "summary": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
